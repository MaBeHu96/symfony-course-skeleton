{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block main %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Category</th>
				<th>Sku</th>
				<th>Price</th>
				<th>CreatedOn</th>
				<th>actions</th>
			</tr>
		</thead>
            <tbody>
            {% for product in paginator.results %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.Category.name }}</td>
                    <td>{{ product.sku }}</td>
                    <td>{{ (product.price / 100)|format_currency('EUR')}}</td>
                    <td>{{ product.createdOn ? product.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}

            {% if paginator.hasToPaginate %}
                <div class="navigation text-center">
                    <ul class="pagination">
                        {% if paginator.hasPreviousPage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product_index_paginated', {page: paginator.previousPage}) }}" rel="previous">
                                    <twig:ux:icon name="tabler:arrow-left"/>
                                    {{ 'Previous' }}
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link"><twig:ux:icon name="tabler:arrow-left"/>
                                    {{ 'Previous' }}</span>
                            </li>
                        {% endif %}

                        {% for i in 1..paginator.lastPage %}
                            {% if i == paginator.currentPage %}
                                <li class="page-item active">
                                    <span class="page-link">{{ i }}
                                        {# <span class="sr-only">{{ 'Current' }}</span> #}
                                    </span>
                                </li>
                            {% else %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('product_index_paginated', {page: i}) }}">{{ i }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}

                        {% if paginator.hasNextPage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('product_index_paginated', {page: paginator.nextPage}) }}">
                                    <span>{{ 'Next' }}
                                        <twig:ux:icon name="tabler:arrow-right"/></span>
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">{{ 'Next' }}
                                    <twig:ux:icon name="tabler:arrow-right"/></span>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
